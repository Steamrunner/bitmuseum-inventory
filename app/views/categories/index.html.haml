%h1= Category.model_name.human.pluralize

.row.my-4.text-right
  .col
    = link_to fa_icon("plus", text: "New category"), [:new, :category], class: "btn btn-primary btn-sm"

.row
  .col
    = paginate @categories, theme: 'twitter-bootstrap-4', pagination_class: "justify-content-center"
  .col-3.text-right.py-2
    %small= page_entries_info @categories

.row
  .col
    %table.table
      %thead
        %tr
          %th{ scope: "col" }= sort_link(@q, :name)
          %th{ scope: "col" }= sort_link(@q, :items_count)

      %tbody
        = render @categories

.row.mb-5
  .col
    = paginate @categories, theme: 'twitter-bootstrap-4', pagination_class: "justify-content-center"
  .col-3.text-right
    %small= page_entries_info @categories
