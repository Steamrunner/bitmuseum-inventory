.row
  .col-4.m-auto
    %h2= t("devise.sign_in")
    = simple_form_for resource, as: resource_name, url: session_path(resource_name), wrapper_mappings: { check_boxes: :vertical_collection, radio_buttons: :vertical_collection, file: :custom_file, boolean: :custom_boolean_switch } do |f|
      = f.error_notification
      = f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" }
      = f.input :password, required: false, input_html: { autocomplete: "current-password" }
      = f.input :remember_me, as: :boolean if devise_mapping.rememberable?

      = f.button :submit, t("devise.sign_in"), class: "btn btn-primary btn-block"

    = render "devise/shared/links"
