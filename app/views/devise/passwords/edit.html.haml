.row
  .col-4.m-auto
    %h2 Change your password
    = simple_form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, wrapper_mappings: { check_boxes: :vertical_collection, radio_buttons: :vertical_collection, file: :custom_file, boolean: :custom_boolean_switch } do |f|
      = f.error_notification
      = f.input :reset_password_token, as: :hidden
      = f.full_error :reset_password_token
      = f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password" }
      = f.input :password_confirmation, label: "Confirm your new password", required: true, input_html: { autocomplete: "new-password" }

      = f.button :submit, "Change my password", class: "btn btn-primary btn-block"

    = render "devise/shared/links"
