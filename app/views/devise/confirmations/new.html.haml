.row
  .col-4.m-auto
    %h2 Resend confirmation instructions
    = simple_form_for resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }, wrapper_mappings: { check_boxes: :vertical_collection, radio_buttons: :vertical_collection, file: :custom_file, boolean: :custom_boolean_switch } do |f|
      = f.error_notification
      = f.full_error :confirmation_token
      = f.input :email, required: true, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), input_html: { autocomplete: "email" }

      = f.button :submit, "Resend confirmation instructions", class: "btn btn-primary btn-block"

    = render "devise/shared/links"
