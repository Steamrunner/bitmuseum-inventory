.row
  .col-4.m-auto
    %h2 Sign up
    = simple_form_for resource, as: resource_name, url: registration_path(resource_name), wrapper_mappings: { check_boxes: :vertical_collection, radio_buttons: :vertical_collection, file: :custom_file, boolean: :custom_boolean_switch } do |f|
      = f.error_notification

      = f.input :first_name, required: true, autofocus: true
      = f.input :last_name, required: true
      = f.input :email, required: true, input_html: { autocomplete: "email" }
      = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password" }
      = f.input :password, required: true, input_html: { autocomplete: "new-password" }

      = f.button :submit, "Sign up", class: "btn btn-primary btn-block"

    = render "devise/shared/links"

